<odoo>
  <data>

    <record id="ir_operativo_form_view" model="ir.ui.view">
      <field name="name">ir.operativo.form.view</field>
      <field name="model">ir.operativo</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>

              <group>
                <field name="name" />
              </group>

            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="ir_operativo_tree_view" model="ir.ui.view">
      <field name="name">ir.operativo.tree.view</field>
      <field name="model">ir.operativo</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" />
        </tree>
      </field>
    </record>

    <record id="action_ir_operativo" model="ir.actions.act_window">
      <field name="name">Operativo</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">ir.operativo</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>
