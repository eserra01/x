<odoo>
  <data>

    <record id="ds_capilla_form_view" model="ir.ui.view">
      <field name="name">ds.capilla.form.view</field>
      <field name="model">ds.capilla</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>

              <group>
                <field name="name" />
              </group>

            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="ds_capilla_tree_view" model="ir.ui.view">
      <field name="name">ds.capilla.tree.view</field>
      <field name="model">ds.capilla</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" />
        </tree>
      </field>
    </record>

    <record id="action_ds_capilla" model="ir.actions.act_window">
      <field name="name">Capilla</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">ds.capilla</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>
