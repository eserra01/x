                                <tbody>
                                   
                                        <tr>
                                            <td class="text-center"></td>
                                            <td class="text-left">Fideicomiso</td>
                                            <td class="text-center"><span t-esc="exend_e"/></td>
                                        </tr>
                                 
                                </tbody>
                             </table>           
                             <strong>02 CLASIFICADOS</strong>
                             <br/>
                             <table  width="100%" style="table-layout: fixed; border:0 px;">
                             
                                <tbody>
                                    <t t-foreach="docse" t-as="doc">
                                        <tr>
                                            <td class="text-center"><span t-esc="doc['Ecobro_receipt']"/></td>
