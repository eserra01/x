<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[hasclass('settings')]" position="inside">
        <div class="app_settings_block" data-string="Contratos" string="Contratos" data-key="pabs_contract">
          <h2>Contratos</h2>
          <div class="row mt16 o_settings_container">
            <div class="col-12 col-lg-6 o_setting_box">
              <div class="o_setting_left_pane">
                <field name="actually_day"/>
              </div>
              <div class="o_setting_right_pane">
                <label for="actually_day" string="Â¿Fecha custom?"/>
                <br/>
                <label for="last_day" string="Fecha por default"/>
                <field name="last_day" attrs="{'readonly' : [('actually_day','=',False)], 'required' : [('actually_day','!=',False)]}"/>
              </div>
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>
</odoo>